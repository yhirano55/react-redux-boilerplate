{
  "compilerOptions": {
    "charset": "utf-8",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es5",
      "es2015",
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "includes": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
