{
  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "includes": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx"
  ]
}
